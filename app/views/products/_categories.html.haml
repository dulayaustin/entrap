%p.lead
  = "Categories"
%ul.list-group
  - @categories.each do |category|
    %li
      = content_tag "a", category.name.titleize, class: "list-group-item parent", id: category.id
      %ul.list-group.child{ "data-category-id" => "#{category.id}" }
        - category.sub_categories.each do |sub|
          %li= link_to sub.name, "#", class: "list-group-item"
