%p.lead
  = "Categories"
%ul.list-group{ class: "categories" }
  - @categories.each do |category|
    %li.list-group-item.parent
      = content_tag "a", category.name.titleize, id: category.id, class: "category"
      %ul.list-group.child{ "data-category-id" => "#{category.id}" }
        - category.sub_categories.each do |sub|
          %li.list-group-item
            = link_to sub.name, "#"

%hr
