-# navigation styled for Bootstrap 3.0
%nav.navbar.navbar-inverse.navbar-fixed-top{"role" => 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle{:type => "button", "data-target" => ".navbar-collapse", "data-toggle" => "collapse", }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to root_path, class: 'navbar-brand' do
        = image_tag "entrap_logo.jpg", class: 'logo'
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        = render 'layouts/navigation_links'
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li.sign-in-name
            %strong= first_name(current_user.name)
          %li.sign-out
            = link_to "Log Out", signout_path, id: "sign_out"
        - else
          %li
            = link_to "Log In with Facebook", "/auth/facebook", id: "sign_in"

