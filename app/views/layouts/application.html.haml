!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Entrap'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Entrap'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload'
    = stylesheet_link_tag 'application', "https://fonts.googleapis.com/css?family=Roboto+Condensed"
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'
    = csrf_meta_tags
  %body{class: "#{controller.controller_name}"}
    %header
      = render 'layouts/navigation'

    %main{:role => "main"}
      = render 'layouts/messages'
      = yield

    .container
      %hr
      %footer
        .row
          .col-lg-12
            %p
              =raw "Copyright &copy; Entrap FightGear 2016"

