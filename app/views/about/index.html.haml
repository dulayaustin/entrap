- page_title(["About Us"])
.col-sm-12
  %header
    .pull-right= link_to "Edit Content", "#", class: "btn btn-sm btn-primary", "data-toggle" => "modal", "data-target" => "#edit-about-us-modal"
    %h2= "About Us"
  .content
    = @about.content.html_safe

.row
  = simple_form_for @about, url: about_path(@about), method: :patch, html: { class: "form-horizontal" } do |f|
    #edit-about-us-modal.modal.fade{"aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
      .modal-dialog.modal-lg{role: "document"}
        .modal-content
          .modal-header
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
              %span{"aria-hidden" => "true"} Ã—
            %h4#myModalLabel.modal-title= "Edit About Us Page"
          .modal-body.clearfix
            .row-fluid
              .col-sm-12            
                = f.input :content, as: :summernote
            
          .modal-footer
            = f.button :submit, "Save Changes", class: "btn-danger"
            = link_to "Cancel", "#", class: "btn btn-default", "data-dismiss" => "modal"