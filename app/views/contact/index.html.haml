- page_title(["Contact"])
.col-sm-12
  %header
    .pull-right= link_to "Edit Content", "#", class: "btn btn-sm btn-primary", "data-toggle" => "modal", "data-target" => "#edit-contanct-modal"
    %h2= "Contact"
  .content
    = @contact.content.html_safe

.row
  = simple_form_for @contact, url: contact_path(@contact), method: :patch, html: { class: "form-horizontal" } do |f|
    #edit-contanct-modal.modal.fade{"aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
      .modal-dialog.modal-lg{role: "document"}
        .modal-content
          .modal-header
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
              %span{"aria-hidden" => "true"} Ã—
            %h4#myModalLabel.modal-title= "Edit Contact Page"
          .modal-body.clearfix
            .row-fluid
              .col-sm-12            
                = f.input :content, as: :summernote
            
          .modal-footer
            = f.button :submit, "Save Changes", class: "btn-danger"
            = link_to "Cancel", "#", class: "btn btn-default", "data-dismiss" => "modal"